RewriteEngine On

# Handle root URL - redirect to public/index.php
RewriteRule ^$ public/index.php [L]

# Handle other URLs - redirect to public/ if the file doesn't exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L]

# Set PHP settings
php_flag display_errors on
php_value error_reporting 32767
php_value date.timezone Africa/Kigali
